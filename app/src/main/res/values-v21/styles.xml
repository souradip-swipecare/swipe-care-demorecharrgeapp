<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="textstyle">
        <item name="android:textColor">@color/colorBlue

        </item>
    </style>

    <style name="smallhead">
        <item name="android:textSize">18sp</item>
       <item name="android:fontFamily">@font/alfa_slab_one</item>
        <item name="android:textColor">#1818C1</item>

        <item name="android:textStyle">normal</item>
    </style>

    <style name="cardheading">
        <item name="android:textColor">#0A0A0A</item>
        <item name="textOutlineColor">#111111</item>
        <item name="fontFamily">@font/archivo_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">#111111</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">4</item>

    </style>
    <style name="iconname">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#1818C1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textColor">#1818C1</item>


    </style>
    <style name="smallheading">

        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#0A0A0A</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#FD000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">4</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#0C0C0C</item>

    </style>

    <style name="carddownheading">

        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#101010</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#FD000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">4</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#0C0C0C</item>

    </style>
</resources>
